snippet fori "Indexed for loop"
for (var ${1:i} = 0, len = ${2:array}.length; $1 < len; ++i) {
	$2[$1]$0
}
endsnippet

snippet fn "Create named function"
function ${1:name}(${2}) {
  $0
}
endsnippet

snippet afn "Create unnamed function"
function(${1}) {
  $0
}
endsnippet

snippet mod "Create module"
var ${1:ModuleName} = (function() {
	var init = function() {};
	$0
  return { init: init };
}());

module.exports = $1;
endsnippet
