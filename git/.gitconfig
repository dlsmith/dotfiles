[core]
	editor = vim
	quotepath = false
	excludesfile = /Users/dev/.gitignore_global
[user]
	email = david.lawrence.smith@gmail.com
	name = David Smith
[grep]
	extendRegexp = true
	lineNumber = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	revert = checkout --
	d = difftool
	co = checkout
	last = log -1 HEAD
	b = branch -v
	s = status
	c = commit
	l = log --oneline --graph
[diff]
	tool = mvimdiff
[difftool]
	prompt = false
[difftool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
